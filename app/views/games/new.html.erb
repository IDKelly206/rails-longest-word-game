<h1>Let's play a game</h1>

<% 10.times do  %>
<span class="letters"><%= @letters.sample %></span>
<% end %>

<div>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" id="">
    <input type="submit" value="Here's my WORD">
  </form>
</div>
